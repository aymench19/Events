{% extends 'base.html.twig' %}

{% block title %}Reservations{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Reservations</h1>
        <a href="{{ path('app_reservation_new') }}" class="btn btn-primary">+ New Reservation</a>
    </div>

    {% if reservations %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Event</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>#{{ reservation.id }}</td>
                        <td>{{ reservation.date ? reservation.date|date('Y-m-d H:i') : '-' }}</td>
                        <td>
                            {% if reservation.status.value == 'CONFIRMED' %}
                                <span class="badge bg-success">Confirmed</span>
                            {% elseif reservation.status.value == 'PENDING' %}
                                <span class="badge bg-warning">Pending</span>
                            {% else %}
                                <span class="badge bg-danger">Cancelled</span>
                            {% endif %}
                        </td>
                        <td>{{ reservation.event.title }}</td>
                        <td>
                            <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-sm btn-info">View</a>
                            <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">No reservations found. <a href="{{ path('app_reservation_new') }}">Create one now!</a></div>
    {% endif %}
{% endblock %}
